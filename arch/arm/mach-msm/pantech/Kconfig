	bool "PANTECH GPIO SLEEP CONFIG"
	default y

config BRCM_BT
	bool "BRCM BT CONFIG"
	default y    
        help
            Support Broadcom bluetooth configs       
 
config PANTECH_WLAN_BRCM
	bool "Broadcom BCM4334 driver"
	depends on ARCH_MSM8960 && !WCNSS_CORE
	select MMC_MSM_SDC4_SUPPORT
	#select BCMDHD
	#select WIRELESS_EXT
	select SKY_WLAN_MMC
	select SKY_PANMAC
	#select KSKY_RAWDATA
	---help---
	  Broadcom driver for connectivity system

config SKY_WLAN_MMC
	bool		

config SKY_PANMAC
	bool "Device file for accessing MAC"

config KSKY_RAWDATA
	bool "sky_rawdata facility for kernel space"

