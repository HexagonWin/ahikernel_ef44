	select F_SKYDISP_LCD_FORCE_ONOFF
	select F_SKYDISP_FORCE_ENCRYPTION_OFF
	select F_SKYDISP_SMART_DIMMING
#	select PANTECH_LCD_POWEROFFSEQ_ON_PHONEOFF
	select PANTECH_SDCARD_HIGH_VOLTAGE_FIX
